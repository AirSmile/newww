<div class="package-widget">
  <h3>
    <a class="name icon-package-hex" href="/packages/{{name}}">{{name}}</a>
  </h3>
  <p class="description">{{description}}</p>
  {{#if latestVersion}}
    <p class="author quiet">
      <a class="version" href="/packages/{{name}}">{{version}}</a>
      published
      {{lastPublishedInWords}}
      by
      <a href="/~{{latestVersion._npmUser.name}}">{{latestVersion._npmUser.name}}</a>
    </p>
  {{/if}}

  <!-- {{#if keywords}}
    <p class="keywords quiet">{{{packageKeywords keywords 5}}}</p>
  {{/if}} -->

  {{#if dlWeek}}
    <p class="quiet">{{pluralize dlWeek "download" true}} in the last week</p>
  {{/if}}

