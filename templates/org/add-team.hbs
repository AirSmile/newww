<div class="main main-contain narrow">
  {{#if user.email_verified}}
  <h1>Create a Team</h1>
  <div>
    <form method="POST" data-form-function="add-user-to-team" id="create-team-form" action="/org/{{org}}/team">
        <section>
          <label for="team-name">Team name</label>
          <input required="required" type="text" id="team-name" name="team-name" placeholder="developers" />
          <p class="description">Your team name <strong class="fake-strong">must</strong> be lower case and have no spaces or punctuation.</p>

          <label for="description">description</label>
          <input type="text" id="description" name="description" />
        </section>
        <section>
          <fieldset>
          <legend>invite some members</legend>
          <input type="text" name="member" class="inline-input" id="add-member-input"/>
          <button id="add-member-to-list" class="button btn-inline btn-secondary add-member-btn" type="button">add</button>
          </fieldset>
        </section>
        {{> invite-members-to-team-list}}

        {{> form_security}}
        <button class="button org-submit-btn" type="submit">Make it so</button>
        <a href="/org/{{org}}">cancel</a>

      </form>

  </div>
  {{else}}
    {{> email-verify-nag}}
  {{/if}}
</div><!--/.main-->
