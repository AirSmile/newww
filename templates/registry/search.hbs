<h2 class="centered ruled">
  {{#if totalResults}}
    {{totalResults}}
  {{else}}
    Sorry, no
  {{/if}}
  result{{#unless singleResult}}s{{/unless}}
  for
  <a href="/search?q={{q}}&page={{page}}">&lsquo;{{q}}&rsquo;</a>
</h2>

<ul class="columnar">
  {{#each results}}
    {{#with fields}}
      <li>{{> package-widget}}</li>
    {{/with}}
  {{/each}}
</ul>

{{> pagination}}
