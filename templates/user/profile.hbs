{{#with profile}}

<div id="profile">

  {{#if isSelf}}
    <a href="http://en.gravatar.com/emails/" class="avatar">
      <img src="{{showprofile.avatarLarge}}">
      <h1>{{showprofile.name}}</h1>
    </a>
  {{else}}
    <a href="/~{{showprofile.name}}" class="avatar">
      <img src="{{showprofile.avatarLarge}}">
      <h1>{{showprofile.name}}</h1>
    </a>
  {{/if}}

  {{{../graphics.github_badge}}}

  <!-- {{#if isSelf}}
    <p><a href=/profile-edit>Edit Profile</a> -
      <a href=/password>Change Password</a> -
      <a href="http://gravatar.com/emails/">Change Picture</a>
    </p>
  {{/if}} -->

  {{#if fields}}
    <ul class="fields">
      {{#each fields}}
        {{#if show}}
          <li class="{{name}}">
            <label>{{title}}</label>
            <span>{{{showField this}}}</span>
          </li>
        {{/if}}
      {{/each}}
    </ul>
  {{/if}}

  {{#if packages}}
    <h2>Packages by {{showprofile.name}}</h2>
    <ul>
      {{#each packages}}
      <li><a href="{{url}}">{{name}}</a> {{description}}
      </li>
      {{/each}}
    </ul>
  {{/if}}

  {{#if starred}}
    <h2>Packages Starred by {{showprofile.name}}</h2>
    <ul>
      {{#each starred}}
      <li><a href="{{url}}">{{name}}</a> {{description}}
      </li>
      {{/each}}
    </ul>
  {{/if}}

  {{#if profile}}
    <a href='/logout/?done=/profile/{{showprofile.name}}'>log out</a>
  {{/if}}

</div>
{{/with}}
