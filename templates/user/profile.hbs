{{#with profile}}

<div id="profile">

  <div class="content">

    <h1>{{name}}</h1>

    {{#if packages}}
      <h2 class="undecorated">
        <a id="packages" href="#packages">
          {{pluralize packages.count "Packages" true}} by {{name}}
        </a>
      </h2>
      <ul class="bullet-free">
        {{#each packages.items}}
          <li>
            <a href="/package/{{name}}">{{truncate name 50}}</a> {{description}}
          </li>
        {{/each}}
      </ul>
    {{/if}}

    {{#if starred}}
      <h2 class="undecorated">
        <a id="starred" href="#starred">
          {{pluralize starred.length "Packages" true}} starred by {{name}}
        </a>
      </h2>
      <ul class="bullet-free">
        {{#each starred}}
          <li>
            <a href="{{url}}">{{truncate name 20}}</a> {{description}}
          </li>
        {{/each}}
      </ul>
    {{/if}}
  </div>

  <div class="sidebar">

    {{#if isSelf}}
      <a href="http://en.gravatar.com/emails/" class="avatar">
        <img src="{{#if avatar.large}}{{avatar.large}}{{else}}{{avatar.medium}}{{/if}}">
      </a>
    {{else}}
      <a href="/~{{name}}" class="avatar">
        <img src="{{#if avatar.large}}{{avatar.large}}{{else}}{{avatar.medium}}{{/if}}">
      </a>
    {{/if}}

    <h2>{{fullname}}</h2>

    <ul class="meta">

      {{#if emailObfuscated}}
        <li class="email">
          <a href="#" data-email={{emailObfuscated}}>obfuscated</a>
        </li>
      {{/if}}

      {{#if meta.homepage}}
        <li class="homepage">
          <a href="{{meta.homepage}}">{{schemeless meta.homepage}}</a>
        </li>
      {{/if}}

      {{#if meta.github}}
        <li class="github">
          <a href="https://github.com/{{meta.github}}">@{{meta.github}}</a> on GitHub
        </li>
      {{/if}}

      {{#if meta.twitter}}
        <li class="twitter">
          <a href="https://twitter.com/{{meta.twitter}}">@{{meta.twitter}}</a> on Twitter
        </li>
      {{/if}}

      <li class="npm">
        <a href="/~{{name}}">@{{name}}</a> on npm
      </li>

      {{#if meta.freenode}}
        <li class="freenode">
          <a href="irc://chat.freenode.net/npm">{{meta.freenode}}</a> on freenode
        </li>
      {{/if}}

      {{#if isSelf}}
          <li><a href=/profile-edit class="unadorned">Edit your Profile</a></li>
          <li><a href=/password class="unadorned">Change your Password</a></li>
          <li><a href="http://gravatar.com/emails/" class="unadorned">Change your Picture</a></li>
      {{/if}}

    </ul>

  </div>

</div>
{{/with}}
