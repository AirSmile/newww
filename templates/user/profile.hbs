{{#with profile}}

<div class="content-column">

  <h1>{{name}}</h1>

  {{#if packages}}
    <h2 class="undecorated">
      <a id="packages" href="#packages">
        {{pluralize packages.count "Packages" true}} by {{name}}
      </a>
    </h2>
    <ul class="bullet-free">
      {{#each packages.items}}
        <li>
          <a href="/package/{{name}}">{{truncate name 50}}</a> {{description}}
        </li>
      {{/each}}
    </ul>
  {{/if}}

  {{#if stars}}
    <h2 class="undecorated">
      <a id="starred" href="#starred">
        {{pluralize stars.length "Packages" true}} starred by {{name}}
      </a>
    </h2>
    <ul class="bullet-free">
      {{#each stars}}
        <li>
          <a href="/package/{{this}}">{{truncate this 50}}</a> {{description}}
        </li>
      {{/each}}
    </ul>
  {{/if}}
</div>

<div class="sidebar">

  {{#if isSelf}}
    <a href="http://en.gravatar.com/emails/" class="avatar">
      <img src="{{#if avatar.large}}{{avatar.large}}{{else}}{{avatar.medium}}{{/if}}">
    </a>
  {{else}}
    <a href="/~{{name}}" class="avatar">
      <img src="{{#if avatar.large}}{{avatar.large}}{{else}}{{avatar.medium}}{{/if}}">
    </a>
  {{/if}}

  {{#if isSelf}}
    <p class="notice">
      This is your profile page, {{name}}! You can
      <a href=/profile-edit>update your social info</a>,
      <a href=/password >change your password</a>, or
      <a href="http://gravatar.com/emails/">update your avatar</a>.
    </p>

    {{> email-verify-nag}}
  {{/if}}

  {{#if resource.fullname}}
    <h2>{{resource.fullname}}</h2>
  {{/if}}

  <ul class="meta">

    {{#if emailObfuscated}}
      <li class="email">
        <a href="#" data-email={{emailObfuscated}}>obfuscated</a>
      </li>
    {{/if}}

    {{#if meta.homepage}}
      <li class="homepage">
        <a href="{{meta.homepage}}">{{schemeless meta.homepage}}</a>
      </li>
    {{/if}}

    {{#if meta.github}}
      <li class="github">
        <a href="https://github.com/{{meta.github}}">@{{meta.github}}</a> on GitHub
      </li>
    {{/if}}

    {{#if meta.twitter}}
      <li class="twitter">
        <a href="https://twitter.com/{{meta.twitter}}">@{{meta.twitter}}</a> on Twitter
      </li>
    {{/if}}

    <li class="npm">
      <a href="/~{{name}}">@{{name}}</a> on npm
    </li>

    {{#if meta.freenode}}
      <li class="freenode">
        <a href="irc://chat.freenode.net/npm">{{meta.freenode}}</a> on freenode
      </li>
    {{/if}}

  </ul>

</div>

{{/with}}
