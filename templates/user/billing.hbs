{{> profile-secondary-nav}}

<div class="container narrow">

  <hgroup>
    <h1>Your Billing Info</h1>
  </hgroup>

  {{> errors}}

  <form action="" method="POST" id="billing-form">

    <label for="card-number">Card Number</label>
    <input type="text" size="20" data-stripe="number" id="card-number" />

    <label for="card-cvc">Card security code</label>
    <input type="text" size="4" data-stripe="cvc" placeholder="123" class="cvc" id="card-exp-cvc" />

    <label for="card-exp-month">Expiration Month</label>
    <input type="text" size="2" data-stripe="exp-month" placeholder="MM" id="card-exp-month" />

    <label for="card-exp-year">Expiration Year</label>
    <input type="text" size="4" data-stripe="exp-year" placeholder="YYYY" id="card-exp-year" />

    {{> form_security}}
    <input type="submit" class="full-width" value="Update Billing Info">

  </form>

</div>

<script type="text/javascript" src="https://js.stripe.com/v2/"></script>

<script type="text/javascript">
  Stripe.setPublishableKey("{{stripePublicKey}}");
</script>
