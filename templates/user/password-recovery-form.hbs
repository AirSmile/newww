<div class="container narrow">

  <hgroup>
    <h1>{{t "user.password.title"}}</h1>
    <h2>{{t "user.password.subtitle"}}</h2>
  </hgroup>

  {{#if sent}}
    <p>{{t "user.password.emailed"}}</p>
  {{else}}

    {{#if error}}
      <p class="error">{{error}}</p>
    {{/if}}

    {{#if users}}
      <p>{{t "user.password.multipleUsernames"}}</p>
    {{/if}}

    <form class="login-forms" method="post">
      {{#if users}}
        <label for="names">Usernames</label>
        <select name="selected_name" id="names">
          {{#each users}}
            <option value="{{this}}">{{this}}</option>
          {{/each}}
        </select>
      {{else}}
        <label for='name_email'>Enter your email address or npm Username</label>
        <input type="text" id='name_email' name='name_email'>
      {{/if}}

      <input class="btn" type="submit" value="{{t "user.password.form.submit"}}">
      <input type="hidden" name="crumb" value="{{crumb}}"/>
    </form>

  {{/if}}

</div>
