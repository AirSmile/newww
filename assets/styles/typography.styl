.red
  color npmred

.subdued
  opacity 0.6

a
  color npmred
  font-weight 600
  text-decoration none
  &:hover
    text-decoration underline
  &.unadorned
    color text-color
    font-weight 400

h1
  font 400 54px/65px fonts
  letter-spacing -3px
  color gray2

  &:before
    float left
    margin-right 10px
    margin-top 10px

h2
  margin 20px 0 20px 0
  font-weight 600
  font-size 24px
  color gray2
  text-transform lowercase

  span
    font-weight 400

  &[class^="icon-"], &[class*=" icon-"]
    line-height 45px
    margin 0 0 35px

  &:before
    font-size 45px
    float left
    margin-right 10px

  // form &, .layout-left &
  //   color npmred

h3
  display block
  margin 30px 0 10px 0
  font-size 20px
  font-weight 600
  line-height 1
  color gray2

h4
  margin 0 0 10px
  letter-spacing -.03em
  font 600 16px/16px fonts
  color gray3

  span
    font-weight 400

hgroup
  text-align center
  text-transform lowercase

  & h2
    font-weight 300

p
  margin 0 0 25px

strong
  &.code
    font-family codefonts

.btn
  display inline-block
  height 47px
  padding 0 50px
  color background-color
  font-weight 600
  line-height 47px
  text-align center
  border-radius 4px
  background npmred

  &:hover
    background gray2

  &.gray
    margin-right 10px
    background c

    &:hover
      background gray2

ul
  margin 25px 0 25px 35px

  li
    list-style disc

a .icon-add:before
  float left
  color background-color
  border-radius 2px
  display inline-block
  width 16px
  height 16px
  line-height 17px
  font-size 9px
  text-align center
  margin 0 6px 0 0
  background npmred

.email-label:hover, .email-field:hover
  text-decoration none
  color gray2

.email-field input
  background-color gray6
