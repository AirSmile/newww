/* enterprise */

.hs-button
  display inline-block
  margin-top 1em
  padding 0.5em 1.5em
  background #cc3d33
  border-radius 5px
  border0
  color #fff
  font-weight bold
  text-decoration none


.hs-buttonhover, .hs-buttonactive
  background #89221b


#ula-intro
  width 760px


#ula-or-contact
  display table
  width 760px
  .row
    display table-row
    .col
      width 50%
      display table-cell

    .col.left
      padding-right 2em


  .row.bottom .col
    padding-top 2em



#npme-agree-form #agree
  width auto
  margin-right 0.4em

#npme-agree-form label[for="agree"]
  width 90%


#innerscroll
  border 1px solid #ccc
  padding 0.5em
  background-color #fff
  height 20em
  overflow-y scroll


a.cta-link
  color #fff


a:hover.cta-link
  text-decoration none

#enterprise-cta
  text-align center

#npme-signup-form label
  width 90%

#npme-signup-form .input input, #npme-signup-form select
  width 90%

#comments
  width 90%
  height 10em
