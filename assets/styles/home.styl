#subheader
  position relative

#home-stats
  position relative
  margin 25px auto 25px auto
  padding 0
  max-width 800px
  display flex
  flex-wrap wrap
  justify-content space-between

  @media only screen and (max-width: 820px)
    display block
    .stat
      display block
      width 200px
      margin 15px auto

div.stat
  flex 0 1 auto
  line-height 16px
  font-size 13px
  color text-color-subdued
  margin 20px 20px 20px 0

  &:before
    font-size 30px
    float left
    margin-right 10px
    margin-top 2px
    color greigh2

  strong
    font-family codefonts
    font-weight 600
    font-size 16px
    display block
    color greigh2

columnarItemHeadingHeight = 20px

ul.columnar
  columns 3
  column-gap 40px

  @extend .vanilla-list
  li
    column-break-inside avoid
    padding 5px
    margin-bottom 20px

    &:hover
      a
        color npmred !important

    h3, h3 a
      font-size columnarItemHeadingHeight

      line-height columnarItemHeadingHeight
      overflow visible
      vertical-align top
      margin 0
      padding 0
      max-width 90%
      @extend .ellipsis

    a
      &.name
        text-decoration none
        transform all 0.1s
        color greigh2
        @extend .red-on-hover
        &:before
          color greigh5
          line-height columnarItemHeadingHeight
          padding-right 6px

    p
      font-size 15px
      margin 0
      max-width 90%
      padding-left 22px
      @extend .ellipsis

    .author
      font-size 14px
      color greigh4
      a
        color greigh3
        @extend .red-on-hover
        font-weight 400
        // text-decoration underline

    .keywords
      font-size 13px
      color greigh4
      font-weight 300
      &:before
        padding-right 4px
