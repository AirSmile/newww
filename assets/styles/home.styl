#subheader
  position relative
  margin 3px 0
  h1
    text-align center
    text-transform lowercase

#home-stats
  position relative
  margin 25px auto 25px auto
  padding 0
  max-width 800px
  display flex
  flex-wrap wrap
  justify-content space-between

  @media only screen and (max-width: 820px)
    display block
    .stat
      display block
      width 200px
      margin 15px auto

div.stat
  flex 0 1 auto
  line-height 16px
  font-size 13px
  color text-color-subdued
  margin 20px 20px 20px 0

  & span:before
    font-size 30px
    float left
    margin-right 10px
    margin-top 2px
    color greigh2

  strong
    font-family codefonts
    font-weight 600
    font-size 16px
    display block
    color greigh2

columnarItemMaxWidth = 590px
columnarItemHeadingHeight = 18px

ul.columnar
  columns 3
  column-gap 20px

  @extend .vanilla-list
  li
    column-break-inside avoid
    // background #DDD
    // max-width columnarItemMaxWidth
    // border 1px solid greigh6
    border-radius 3px
    padding 5px
    margin-bottom 15px
    h3, h3 a, h3 span
      font-size 18px
      line-height columnarItemHeadingHeight
      overflow visible
      vertical-align top
      margin 0
      padding 0
      max-width 90%
      @extend .ellipsis
    a
      text-decoration none
      transform all 0.1s
      color greigh2
      &:hover
        color npmred
      &:before
        color greigh5
        line-height columnarItemHeadingHeight
        padding-right 6px
    span.version
      display none
      color greigh4
    p
      font-size 14px
      margin 0
      max-width 90%
      @extend .ellipsis

    .keywords
      font-size 13px
      color greigh5
      font-weight 300
      a
        color greigh5
        &:hover
          color npmred
