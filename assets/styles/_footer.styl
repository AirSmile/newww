footer
  position relative
  clear both
  margin 100px 0 0 0
  padding 38px 0 0
  min-height 150px
  color background-color
  font-size 14px
  background gray2

  .container
    position static

  p
    margin 0
    padding 0 0 20px

  span
    margin 0 50px 0 0

    @media only screen and (max-width: 1023px)
      display block
      margin 0 0 10px

  a
    font 600 14px/21px fonts
    color footer-text-color
    margin 0 20px 0 0
    text-decoration none

    &:hover
      color background-color

    @media only screen and (max-width: 1023px)
      line-height 35px

    &#npm-loves-you
      position absolute
      bottom 6px
      right 10px
      margin 0
      color rgba(footer-text-color, 0.3)

#footer-logo
  float right
  opacity 0.3

#wombat
  position absolute
  bottom -300px
  right -300px
  width 300px
  height 300px
  background url(../img/wombat-ninja.png) no-repeat top left
